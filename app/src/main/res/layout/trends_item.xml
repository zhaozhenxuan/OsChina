<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#24CF5F">

        <TextView
            android:id="@+id/tv_toobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="动弹"
            android:textColor="#ffffff" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/treads_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicatorColor="#24CF5F"
        app:tabSelectedTextColor="#BBBBBB"
        app:tabTextColor="#24CF5F"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/trends_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>